desktop-menu
  z-index: 100

.desktop-menu
  display: flex
  align-items: center
  justify-content: space-between
  line-height: 22px
  background-color: var(--desktop-menu-bg)
  color: var(--white-text)
  user-select: none
  cursor: default
  box-shadow: 0 1px 10px rgba(0, 0, 0, 0.5)

.desktop-menu--maximized
  box-shadow: none

.desktop-menu__left-box
.desktop-menu__right-box
  display: flex

.desktop-menu__right-box
  & > * + *
    margin-left: 3px
