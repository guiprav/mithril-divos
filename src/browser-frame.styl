browser-frame
  position: relative
  flex-grow: 1

.browser-frame
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  border: 1px solid #757575
  border-top: 0
  background-color: white

.browser-frame__iframe
  position: absolute
  width: 100%
  height: 100%
  border: 0

.ui-draggable-dragging
.ui-resizable-resizing
  .browser-frame__iframe
    pointer-events: none
