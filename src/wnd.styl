.wnd
  display: flex
  flex-direction: column
  border-top-left-radius: 6px
  border-top-right-radius: 6px
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.5)
  transition: opacity ease 0.2s

  &.ui-draggable-dragging
    opacity: 0.8

.wnd--active
  z-index: 100

.wnd--maximized
  position: absolute
  left: 0 !important
  right: 0 !important
  top: 0 !important
  bottom: 0 !important
  width: auto !important
  height: auto !important

.wnd--floating
  .meta-key &
    cursor: pointer

    & > *
      pointer-events: none

.wnd__compose
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  height: 100%
  background-color: var(--desktop-menu-bg)
