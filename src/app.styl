@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

@font-face
  font-family: 'Droid Sans Mono Awesome'
  font-style: normal
  font-weight: 400
  src: url('droid-sans-mono-awesome.ttf')

*
  box-sizing: border-box

body
  --desktop-menu-bg: #1d1f21
  --grey-text: #373b41
  --white-text: #c5c8c6

  display: flex
  flex-direction: column
  width: 100vw
  height: 100vh
  overflow: hidden
  margin: 0
  font-family: 'Droid Sans Mono Awesome', monospace
  font-size: 15px
  background-image: url('wallpaper.png')
  background-size: cover

.left-sep
  position: relative
  margin-left: 1.4em
  padding-left: 0.25em
  padding-right: 0.45em
  background-color: var(--bg-color)

  &:after
    content: ''
    position: absolute
    right: 100%
    top: 0
    width: 0
    height: 0
    border: solid transparent
    border-width: 0.74em
    border-right-color: var(--bg-color)

  &:before
    content: ''
    position: absolute
    right: calc(100% + 1px)
    top: 0
    width: 0
    height: 0
    border: solid transparent
    border-width: 0.74em
    border-right-color: var(--sep-color)

.right-sep
  position: relative
  margin-right: 1.4em
  padding-right: 0.25em
  padding-left: 0.45em
  background-color: var(--bg-color)

  &:after
    content: ''
    position: absolute
    left: 100%
    top: 0
    width: 0
    height: 0
    border: solid transparent
    border-width: 0.74em
    border-left-color: var(--bg-color)

  &:before
    content: ''
    position: absolute
    left: calc(100% + 1px)
    top: 0
    width: 0
    height: 0
    border: solid transparent
    border-width: 0.74em
    border-left-color: var(--sep-color)

.ui-resizable
  position: relative

.ui-resizable-handle
  position: absolute
  font-size: 0.1px
  display: block

.ui-resizable-disabled .ui-resizable-handle
.ui-resizable-autohide .ui-resizable-handle
  display: none

.ui-resizable-n
  cursor: n-resize
  height: 7px
  width: 100%
  top: -5px
  left: 0

.ui-resizable-s
  cursor: s-resize
  height: 7px
  width: 100%
  bottom: -5px
  left: 0

.ui-resizable-e
  cursor: e-resize
  width: 7px
  right: -5px
  top: 0
  height: 100%

.ui-resizable-w
  cursor: w-resize
  width: 7px
  left: -5px
  top: 0
  height: 100%

.ui-resizable-se
  cursor: se-resize
  width: 12px
  height: 12px
  right: 1px
  bottom: 1px

.ui-resizable-sw
  cursor: sw-resize
  width: 9px
  height: 9px
  left: -5px
  bottom: -5px

.ui-resizable-nw
  cursor: nw-resize
  width: 9px
  height: 9px
  left: -5px
  top: -5px

.ui-resizable-ne
  cursor: ne-resize
  width: 9px
  height: 9px
  right: -5px
  top: -5px
